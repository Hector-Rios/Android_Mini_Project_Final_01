<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Frame_Layout01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <!-- Add in TextView to display flower name
        android:layout_width="match_parent"
        android:layout_height="wrap_content"   -->
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:cardBackgroundColor="#B3F8FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border_linear_layout">

            <TextView
                android:id="@+id/account_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickProfile"
                android:text="[ Basic Text ]"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/account_img_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="TODO"
                android:onClick="onClickProfileImage"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>